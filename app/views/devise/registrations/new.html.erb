<div class="auth-form-container">
  <h2 class="auth-form-header">Sign up</h2>

  <div class="auth-form">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="auth-form-inputs form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.input :contact_name, required: true, required: true %>
        <%= f.input :artist_name, required: true, required: true %>
        <%= f.input :phone_number, required: true, required: true %>
      </div>

      <div class="auth-form-actions form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>